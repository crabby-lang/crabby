{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "onEnterRules": [
        {
            "beforeText": "/\\*\\*.*",
            "action": {
                "indent": "indentOutdent", "appendText": " * "
            }
        },
        {
            "beforeText": "\\s*\\*.*",
            "action": {
                "indent": "none", "appendText": "* "
            }
        },
        {
            "beforeText": "\\s*\\/\\*\\s",
            "action": {
                "indent": "indentOutdent", "appendText": " "
            }
        }
    ],
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}
