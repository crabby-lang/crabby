// Crabby's Example network usage - EXPERIMENTAL

def network_example() {
    let server = network.listen("127.0.0.1", 8080)
    server.send("Hello!")
    let response = server.receive()

    let client = network.connect("127.0.0.1", 8080)
    client.send("Hello server!")
}

network_example()

